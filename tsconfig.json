{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "dist",
        "rootDir": "src",
        "noEmitOnError": false,
        "sourceRoot": "",
        "inlineSourceMap": false,
        "inlineSources": false,
        "noLib": false,
        "declaration": true
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "src/*.ts",
        "src/**/*.ts",
        "typings/index.d.ts",
        "!node_modules/**"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": true
    },
    "files": [
        "src/index.d.ts",
        "src/index.ts",
        "src/BaseControllerMongoose/BaseControllerMongoose.d.ts",
        "src/BaseControllerMongoose/BaseControllerMongoose.ts",
        "src/MongoosePlugin/MongoosePlugin.d.ts",
        "src/MongoosePlugin/MongoosePlugin.ts",
        "src/paramconverter/paramconverterMongoose.decorators.d.ts",
        "src/paramconverter/paramconverterMongoose.decorators.ts",
        "typings/index.d.ts"
    ]
}
